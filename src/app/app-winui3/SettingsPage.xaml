<Page
  x:Class="OpenKneeboardApp.SettingsPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:OpenKneeboardApp"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  Background="{ThemeResource SystemChromeMediumLowColor}">
  <ScrollViewer VerticalScrollMode="Auto">
    <StackPanel Margin="16">
      <TextBlock
        Style="{StaticResource TitleTextBlockStyle}"
        Text="Settings"
        Margin="0,0,0,8"/>
      <GridView
        x:Name="Grid"
        Grid.Row="1"
        IsItemClickEnabled="True"
        ItemClick="OnItemClick">
        <GridView.ItemTemplate>
          <DataTemplate x:Key="SettingsSubpageTemplate"
                        x:DataType="local:SettingsSubpageData">
            <Grid
              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
              CornerRadius="4"
              BorderThickness="1"
              ColumnDefinitions="Auto,*"
              Padding="12"
              Height="96"
              Width="360">
              <Grid
                Grid.Column="0"
                Width="72"
                Height="72"
                CornerRadius="8"
                Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}">
                <FontIcon
                  Glyph="{x:Bind Glyph}"
                  FontSize="40"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"/>
              </Grid>
              <Grid RowDefinitions="Auto,*"
                    Grid.Column="1"
                    Margin="8,0,0,0">
                <TextBlock
                  Grid.Row="0"
                  Text="{x:Bind Title}"
                  Style="{StaticResource BodyStrongTextBlockStyle}"
                  TextWrapping="NoWrap"/>
                <TextBlock
                  Margin="8,0,0,0"
                  Grid.Row="1"
                  Text="{x:Bind Description}"
                  Style="{StaticResource CaptionTextBlockStyle}"
                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                  VerticalAlignment="Stretch"/>
              </Grid>
            </Grid>
          </DataTemplate>
        </GridView.ItemTemplate>
        <GridView.Items>
          <!-- Glyph reference: https://docs.microsoft.com/en-us/windows/apps/design/style/segoe-ui-symbol-font -->
          <!-- F119 HMD -->
          <local:SettingsSubpageData
            x:Name="VRItem"
            Glyph="&#xF119;"
            Title="Virtual Reality">
            Adjust how OpenKneeboard appears in games and applications when using a virtual reality headset.
          </local:SettingsSubpageData>
          <!-- E7F4 ThisPC -->
          <local:SettingsSubpageData
            x:Name="NonVRItem"
            Glyph="&#xEC4E;"
            Title="Non VR">
            Adjust how OpenKneeboard appears in windowed or full-screen games and applications.
          </local:SettingsSubpageData>
          <!-- F571 PrintAllPages -->
          <local:SettingsSubpageData
            x:Name="TabsItem"
            Glyph="&#xF571;"
            Title="Tabs">
            Add, remove, and re-order sections in your kneeboard.
          </local:SettingsSubpageData>
          <!-- E961 Input -->
          <local:SettingsSubpageData
            x:Name="InputItem"
            Glyph="&#xE961;"
            Title="Input">
            Control your kneeboard with your keyboard, joystick, or graphics tablet buttons.
          </local:SettingsSubpageData>
          <!-- E9E9 Equalizer-->
          <local:SettingsSubpageData
            x:Name="AdvancedItem"
            Glyph="&#xE9E9;"
            Title="Advanced">
            Advanced features and behavior tweaks.
          </local:SettingsSubpageData>
        </GridView.Items>
      </GridView>
    </StackPanel>
  </ScrollViewer>
</Page>
