#pragma once

#include <cstring>
#include <optional>

template <class T>
bool operator==(const std::optional<T>& a, const std::optional<T>& b) noexcept {
  if ((!a) && (!b)) {
    return true;
  }
  if ((!a) != (!b)) {
    return false;
  }

  return *a == *b;
}
